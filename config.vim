" INDENT
set autoindent
set smartindent
set tabstop=4
set softtabstop=4
set shiftwidth=4

" VIEW
set number
set ruler
set title
set wrap
set linebreak
set showmatch

" SEARCH
set incsearch
set hlsearch

" BACKUP
set backupdir=./.backup,.,/tmp
set directory=.,./.backup,/tmp

" COLOR
set colorcolumn=80

syntax on
syntax enable

colorscheme desert

